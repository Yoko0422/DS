<%= form_with(model: main, local: true) do |form| %>
  <% if main.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(main.errors.count, "error") %> prohibited this main from being saved:</h2>

      <ul>
      <% main.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div><strong>投稿者：</strong></div>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <div><strong>タイトル：</strong></div>
    <%= form.text_field :title, size: '37' %>
  </div>

  <div class="form-group">
    <div><strong>テキスト：</strong></div>
    <%= form.text_area :text, size: '40x5' %>
  </div>

  <div class="form-group">
    <div><strong>ファイル1(一覧ページに表示されます)：</strong></div>
    <%= form.file_field :file1 %>
  </div>
  
  <div class="form-group">
    <div><strong>ファイル2：</strong></div>
    <%= form.file_field :file2 %>
  </div>
  
  <div class="form-group">
    <div><strong>ファイル3：</strong></div>
    <%= form.file_field :file3 %>
  </div>
  
  <div class="form-group">
    <div><strong>ファイル4：</strong></div>
    <%= form.file_field :file4 %>
  </div>

  <div class="actions">
    <%= form.submit '投稿する',  class: 'btn-block' %>
  </div>
<% end %>